
@{Layout = "~/Views/Shared/_lightLayout.cshtml";
    @model DXWebApp.Models.ChangePasswordModel
}
<div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4" id="loginFrom">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">Reset Password</div>
        </div>
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", @id = "frmlogin" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-field form-login-error">
                @Html.ValidationMessage("ChangePasswordFaild", "", new { @class = "text-danger" })
            </div>
            <div class="panel-body panel-login">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                    @Html.TextBoxFor(u => u.NewPassword, "", new { @class = "form-control", @type = "password", @placeholder = "Mật khẩu mới" })
                    @Html.ValidationMessageFor(u => u.NewPassword, "", new { @class = "text-danger" })
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                    @Html.TextBoxFor(u => u.ConfirmPassword, "", new { @class = "form-control", @type = "password", @placeholder = "Nhập lại mật khẩu" })
                    @Html.ValidationMessageFor(u => u.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="panel-footer">

                @Html.DevExpress().Button(settings =>
                {
                    settings.Name = "Button";
                    settings.Text = "Next";
                    settings.UseSubmitBehavior = true;
                }).GetHtml()
            </div>
        }
    </div>
</div>