
@{Layout = "~/Views/Shared/_lightLayout.cshtml";
@model DXWebApp.Models.ResetPassWordModel
}
<div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4" id="loginFrom">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">Reset Password</div>
        </div>
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", @id = "frmlogin" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-field form-login-error">
                @Html.ValidationMessage("ResetPasswordFaild", "", new { @class = "text-danger" })
            </div>
            <div class="panel-body panel-login">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    @Html.TextBoxFor(u => u.CMND, "", new { @class = "form-control", @placeholder = "Nhập CMND..." })
                    @Html.ValidationMessageFor(u => u.CMND, "", new { @class = "text-danger" })
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                    @Html.DropDownList("Server", ViewData["lstSrv"] as List<SelectListItem>, "-- Select Server --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Server, "", new { @class = "text-danger working-date-error" })
                </div>
            </div>
            <div class="panel-footer">

                @Html.DevExpress().Button(settings =>
                {
                    settings.Name = "Button";
                    settings.Text = "Next";
                    settings.UseSubmitBehavior = true;
                }).GetHtml()
            </div>
            }
        </div>
</div>